{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src/",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "sourceMap": true,

    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitAny": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "axios",
      "node",
      "react",
      "react-dom",
      "redux",
      "react-redux"
    ],
    "paths": {
      "core/*": ["*"],
      "components/*": ["components/*"],
      "styles": ["styles"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
